{
  "name": "zukus",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun --cwd apps/zukus expo start",
    "app": "cd apps/zukus && expo start",
    "build": "turbo build",
    "test": "turbo test",
    "test:views": "bun --cwd apps/zukus vitest run",
    "test:views:watch": "bun --cwd apps/zukus vitest",
    "typecheck": "turbo typecheck",
    "lint": "turbo lint",
    "clean": "turbo clean && rm -rf node_modules",
    "rulesync": "bun scripts/rulesync.ts",
    "deploy:server": "fly deploy -a zukus-server -c apps/server/fly.toml"
  },
  "devDependencies": {
    "@supabase/supabase-js": "^2.93.2",
    "turbo": "^2.3.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "bun@1.0.0",
  "dependencies": {
    "@react-native-community/slider": "^5.1.2",
    "@react-navigation/elements": "^2.9.5"
  }
}
